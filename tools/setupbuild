#!/bin/bash

DIR=`pwd`

if [ ${PLANCK_O_PATH:+x} ]; then
	export PATH=$PLANCK_O_PATH
fi

export PLANCK_PLATFORM=$1
export PLANCK_CONFIGURATION=$2
export PLANCK_BUILD_OUT=$DIR/build/$PLANCK_PLATFORM/$PLANCK_CONFIGURATION
export PLANCK_BUILD_STAGE=$DIR/stage/$PLANCK_PLATFORM/$PLANCK_CONFIGURATION
export PLANCK_VMDIR=$PLANCK_SRC/tools/vm/$PLANCK_PLATFORM/
export PLANCK_O_PATH=$PATH
export PATH=$PLANCK_VMDIR/:$PATH
